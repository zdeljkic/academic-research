<?xml version='1.0'?>
<!DOCTYPE TransformSchema>
<transform name="PhraseToArticlesGS" longName="To Articles (GS)" type="generic" >
  <description>find articles based on input phrase</description>
  <parameters>
    <param name="numResults" longName="Number of results desired" description="number of result asked" default="" optional="false" level="advanced" format="int">
      <int min="1" max="100"/>
    </param>
  </parameters>
  <config>
    <value name="need_root">true</value>
    <value name="input_as_args">true</value> <!-- otherwise on stdin -->
  </config>
  <input>
    <entity type="phrase" />
  </input>
  <output>
    <entity type="article" />
  </output>
</transform>
